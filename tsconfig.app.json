{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue"
    ],
    "compilerOptions": {
        "composite": true,
        "declarationMap": true,
        "declaration": true,
        "baseUrl": ".",
        "paths": {
            "@src/*": ["./src/*"],
            "@features/*": ["./src/features/*"],
            "@shared/*": ["./src/shared/*"],
            "@assets/*": ["./src/assets/*"]
        }
    }
}